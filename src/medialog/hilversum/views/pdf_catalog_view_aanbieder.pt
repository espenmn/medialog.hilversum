<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="medialog.hilversum">
  <body tal:define="portal_url view/portal_url" class="pdf-export">
    <link rel="stylesheet" href="${portal_url}/++plone++medialog.hilversum/css/hilversum.css" />
    <link rel="stylesheet" href="${portal_url}/++theme++dutchman-theme/dutchmanblue/theme.min.css"/>

    <tal:define tal:define="icons view/discipline_images">
      <div class="xflex xflex-wrap">
        <div class="xtextdiv">
          <h2>${context/Title}</h2>
          <p style="font-size: 8pt">
            <span tal:condition="context/address">${context/address} | </span>
            <span tal:condition="context/web">${context/web} | </span>
            <span tal:condition="context/e_mail">${context/e_mail}</span>
          </p>
          <p class="lead">${context/Description}</p>
          <p>
            <span tal:repeat="disiplin view/disciplines">
              <a tal:define="disiplin_name python: disiplin.lstrip().rstrip().replace(' ', '_')" href="${portal_url}/proloog-collection/?collectionfilter=1&discipline=${disiplin_name}" class="pat-tooltip" title="${disiplin}">
                <img class="disiplin" src="++plone++medialog.hilversum/${python: disiplin_name.lower()}.png" title="${disiplin}" alt="${disiplin}-image" height="50" width="50"/>
              </a>
            </span>
          </p>
          <div tal:content="structure context/text/output|None"></div>
        </div>
        <div tal:define="scales context/@@images; thumbnail python: scales.scale('image', width=500);">
          <img tal:condition="thumbnail" tal:attributes="src thumbnail/url;
                                    width thumbnail/width;
                                    height thumbnail/height" />
        </div>
        <div class="margin-20-0" tal:content="structure context/infotext/output|None"></div>
        <div tal:repeat="brain view/courses">
          <div tal:define="obj brain/getObject">


            <!-- Copied from pdf-view -->
            <h1 class="documentFirstHeading page-break-before flex" style="justify-content: space-between" tal:define="aanbieder view/get_aanbieder|None">
              <span>
                <a href="${obj/absolute_url}" class="no-underline">
                  <span class="custom-color2 bold">${obj/Title}</span>
                </a>
                <span class="small" tal:repeat="aanb obj/aanbieder"> – ${aanb}</span>
              </span>
              <img alt=" " height="45" style="margin-left: auto; height: 45px" src="${aanbieder/getURL|None}/@@images/image/mini" />
            </h1>
            <p class="documentDescription lead">${obj/Description}</p>
            <p>
              <span tal:repeat="disiplin obj/discipline">
                <a tal:define="disiplin_name python: disiplin.lstrip().rstrip()" href="${portal_url}/proloog-collection/?collectionfilter=1&discipline=${disiplin_name}" class="dis_link pat-tooltip" title="${disiplin}">
                  <img class="disiplin" src="++plone++medialog.hilversum/${python: disiplin_name.replace(' ', '_').lower()}.png" title="${disiplin}" alt="${disiplin}-image" width="55"/>
                  <span>${disiplin}</span>
                </a>
              </span>
            </p>

            <div class="pdfimagediv" tal:define="scales obj/@@images;
                 thumbnail python: scales.scale('image', 'larger');">

              <img tal:condition="thumbnail" tal:attributes="src thumbnail/url;
                                width thumbnail/width;
                                height thumbnail/height" />

            </div>

            <hr/>

            <div class="flex gap-1 font-90">
              <div class="pdf_course_text course_text">
                <div class="margin-10-0" tal:content="structure obj/text/output|None"></div>
                <div tal:condition="obj/notitie|None">
                  <p>
                    <b i18n:translate="">Notitie: </b>
                    <br/>
 
               ${obj/notitie}
                  </p>
                </div>
                <div tal:replace="structure obj/extra_info_in_communicatie">Extra info here</div>
                <hr/>
                <p>
                  <b i18n:translate="">Geschikt voor:</b>
                  <br/>
                  <span tal:repeat="vo_type obj/vo_typen|None">
          ${vo_type}<tal:block tal:condition="not:repeat/vo_type/end">, </tal:block>
                  </span>
                </p>
              </div>


              <div class="course_info pdf_course_info">
                <div class="info_box padding-10">
                  <p>
                    <b i18n:translate="">Aanvullende activiteit informatie</b>
                  </p>
                  <table>
                    <tr tal:condition="obj/naam">
                      <td>
                        <span i18n:translate="">Naam: </span>
                      </td>
                      <td>${obj/Title}</td>
                    </tr>
                    <tr tal:condition="obj/aanbieder">
                      <td>
                        <span i18n:translate="">Aanbieder: </span>
                      </td>
                      <td>${python: ", ".join(obj.aanbieder)}</td>
                    </tr>
                    <tr tal:condition="obj/leerjaren">
                      <td i18n:translate="">Leerjaren:</td>
                      <td> ${python: ", ".join(obj.leerjaren)} 
                      </td>
                    </tr>
                    <tr tal:condition="obj/aantal_lessen">
                      <td>
                        <span i18n:translate="">Aantal lessen: </span>
                      </td>
                      <td>${obj/aantal_lessen}</td>
                    </tr>
                    <tr tal:condition="obj/uitvoering_op_school">
                      <td>
                        <span i18n:translate="">Uitvoering op school: </span>
                      </td>
                      <td>${obj/uitvoering_op_school}</td>
                    </tr>
                    <tr tal:condition="obj/duur">
                      <td>
                        <span i18n:translate="">Duur (in minuten): </span>
                      </td>
                      <td>${obj/duur}</td>
                    </tr>
                    <tr tal:condition="obj/startdatum">
                      <td>
                        <span i18n:translate="">Startdatum: </span>
                      </td>
                      <td tal:content="python:obj.startdatum.strftime('%d-%m-%Y')"></td>
                    </tr>
                    <tr tal:condition="obj/einddatum">
                      <td>
                        <span i18n:translate="">Einddatum: </span>
                      </td>
                      <td tal:content="python:obj.einddatum.strftime('%d-%m-%Y')"></td>
                    </tr>
                    <tr tal:condition="obj/prijs_per">
                      <td>
                        <span i18n:translate="">Prijs per: </span>
                      </td>
                      <td>${obj/prijs_per}</td>
                    </tr>
                    <tr tal:condition="obj/tarief_leerling_groep">
                      <td>
                        <span i18n:translate="">Tarief leerling/groep: </span>
                      </td>
                      <td>
                        <span>€ ${python: obj.tarief_leerling_groep.replace(",00", "").replace(".00", "").replace(".0", "").replace(",0", "")} </span>
                      </td>
                    </tr>
                    <tr tal:condition="obj/max_aantal_leerlingen">
                      <td>
                        <span i18n:translate="">Max. aantal leerlingen: </span>
                      </td>
                      <td>${obj/max_aantal_leerlingen}</td>
                    </tr>

                    <tr tal:condition="obj/tarief_begeleider">
                      <td i18n:translate="">Tarief Begeleider:</td>
                      <td>${obj/tarief_begeleider}</td>
                    </tr>
                    <tr tal:condition="obj/max_aantal_leerlingen_prijsberekening">
                      <td i18n:translate="">Max Aantal Leerlingen Prijsberekening:</td>
                      <td>${obj/max_aantal_leerlingen_prijsberekening}
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>


      </div>
      <div tal:condition="context/text_bottom|None" tal:content="structure context/text_bottom/output|None"></div>
    </tal:define>
  </body>
</html>
