<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
  <!-- Extra portlets here  -->

  <portlet
    addview="medialog.hilversum.portlets.Prologicons"
    title="PrologIcons"
    description="A portlet which can render weather of the given place."
    i18n:attributes="title title_prologicons;
                     description description_prologicons">

    <!-- This will enable the portlet for right column,
    left column and the footer too.
    -->
    <for interface="plone.app.portlets.interfaces.IColumn" />

    <!--
    This will enable the portlet in the dashboard.
    -->
    <!--<for interface="plone.app.portlets.interfaces.IDashboard" />-->

  </portlet>

  <portlet
    addview="medialog.hilversum.portlets.Prolongfilter"
    title="ProlongFilter"
    description="A portlet which renders filters for collection."
    i18n:attributes="title title_prolongfilter;
                     description description_prolongfilter">

    <!-- This will enable the portlet for right column,
    left column and the footer too.
    -->
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <!--
    This will enable the portlet in the dashboard.
    -->
    <!--<for interface="plone.app.portlets.interfaces.IDashboard" />-->

  </portlet>
  
  
</portlets>